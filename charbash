if [[ $1 == "stats" ]]; then
  cat ./char_info/basic_stats
  fi

if [[ $1 == "h" ]]; then
  hp=$(cat "./char_info/hp")
  echo $hp
  if [[ $# == 1 ]]; then
    echo "The player's HP is: $hp"
  fi
  else; then
    echo "Adding $2 HP to player"
    input=$2
    new_hp=$((hp+input))
    echo "New HP: $new_hp"
  fi
fi

if [ -z $1 ];
  then cat ./charbash_info
  fi
